@{
    ViewBag.Title = "Index";
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/style.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <script src="~/Scripts/bootstrap.js" ></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    
    <style>
        div>h2{
            margin-right:-90px;
        }
    </style>    
</head>

<body style="background-color:white; margin-top:20px; background:url(../../Content/Images/img5.jpg) ">
     <center>
        <div class="container" style="margin-top:20px;" >
            
            <h2 style="float:right; font-family:Calibri; margin-right:10px;">LATEST NEWS</h2>
            <marquee direction="up" style="margin-left:950px; float:right; background-color:white;">
                1. Australia Won the World Cup.
                <br />2. PSL to increase player salary purse
                5h ago<br />
                3. Early specialisation has led to England's injury woes: Steffan Jones
                9h ago<br />
                4. Fit Moeen Ali looks forward to Townsville warm-up
                10h ago<br />
                5. Ajmal announces retirement from all forms of cricket
                12h ago<br />
               6. Sri Lanka unearth another mystery spinner
            </marquee>

             <section>
                <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:700px; top:-430px;">
                    <!-- Indicators -->
                    <ol class="carousel-indicators" >
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Content/Images/Img1.jpg" alt="Cricket" style="height:500px;">
                        </div>

                        <div class="item">
                            <img src="~/Content/Images/Img2.jpg" alt="Cricket" style="height:500px;">
                        </div>

                        <div class="item">
                            <img src="~/Content/Images/Img3.jpg" alt="Cricket" style="height:500px;">
                        </div>

                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                   
                </div>
                            </section>
        </div>
    </center>
</body>
</html>



